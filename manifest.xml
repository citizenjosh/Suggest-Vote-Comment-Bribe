<install type="component" version="1.5.0">
    <name>Suggestion</name>
    <version>1.0</version>
    <description>A user can write a comment on which users can vote, comment, and bribe.</description>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <copyright>Copyright (C) 2010 All rights reserved.</copyright>
    <creationDate>23-Jan-2010</creationDate>
    <installfile>install/install.suggestion.php</installfile>
    <uninstallfile>install/uninstall.suggestion.php</uninstallfile>
    <install>
        <sql>
            <file driver="mysql" charset="utf8">install/sql/install.suggestion.sql</file>
        </sql>
    </install>
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">install/sql/uninstall.suggestion.sql</file>
        </sql>
    </uninstall>
    <files folder="site">
        <folder>controllers</folder>
        <folder>language</folder>
        <folder>models</folder>
        <folder>views</folder>
        <filename>controller.php</filename>
        <filename>recaptchalib.php</filename>
        <filename>suggestion.php</filename>
    </files>
    <languages folder="site/language">
        <language tag="en-GB">en-GB/en-GB.com_suggestion.ini</language>
    </languages>
    <administration>
        <menu img="components/com_suggestion/assets/images/favicon.ico" link="option=com_suggestion">Suggestion</menu>
        <submenu>
            <menu img="" link="option=com_suggestion&amp;view=suggs">Suggestions</menu>
            <menu img="" link="option=com_suggestion&amp;view=comments">Comments</menu>
            <menu img="" link="option=com_suggestion&amp;view=votes">Votes</menu>
            <menu img="" link="option=com_suggestion&amp;view=bribes">Bribes</menu>
            <menu img="" link="option=com_suggestion&amp;view=logs">Log</menu>
            <menu img="" link="option=com_suggestion&amp;view=suggestions">Settings</menu>
        </submenu>
        <files folder="admin">
            <folder>assets</folder>
            <folder>controllers</folder>
            <folder>install</folder>
            <folder>language</folder>
            <folder>models</folder>
            <folder>tables</folder>
            <folder>views</folder>
            <filename>CHANGELOG.php</filename>
            <filename>admin.suggestion.php</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
        </files>
        <languages folder="admin/language">
            <language tag="en-GB">en-GB/en-GB.com_suggestion.ini</language>
        </languages>
    </administration>
</install>
