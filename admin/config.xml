<?xml version="1.0" encoding="utf-8" ?>
<config>
	<params addPath="/administrator/components/com_suggestvotecommentbribe/elements">
		<param type="list" name="useraccess" default="must_be_logged_in" label="User Restrictions" description="Restrictions for a user to use this." > 
			<option value="must_be_logged_in">Must be logged in (no CAPTCHA)</option>
			<option value="guests_enter_captcha">Guests enter CAPTCHA</option> 
			<option value="everyone_enters_captcha">Everyone enters CAPTCHA</option> 
			<option value="unrestricted">Unrestricted</option>
		</param>
		<param type="spacer" default="show/hide" /> 
		<param name="columnstoshow" type="multilist"
			default=""
			multiple="multiple" label="Select columns to show"
			description="Select one or more items from the list. You can use Ctrl-click to select more than one item."> 
			<option value="showId">ID</option> 
			<option value="showTitle">Title</option> 
			<option value="showVotes">Votes</option> 
			<option value="showComments">Comments</option> 
			<option value="showBribes">Bribes</option> 
			<option value="showAuthor">Author</option>
			<option value="showState">State</option> 
		</param>
		<param type="spacer" default="reCAPTCHA" />
		<param type="list" name="recaptchatheme" default="clean"
			label="reCAPTCHA theme" description="Theme for reCAPTCHA">
			<option value="blackglass">Blackglass</option>
			<option value="clean">Clean</option>
			<option value="red">Red</option>
			<option value="white">White</option>
		</param>
		<param type="list" name="recaptchalng" default="en"
			label="reCAPTCHA language" description="Language for reCAPTCHA">
			<option value="nl">Dutch</option>
			<option value="en">English</option>
			<option value="fr">French</option>
			<option value="de">German</option>
			<option value="pt">Portuguese</option>
			<option value="ru">Russian</option>
			<option value="es">Spanish</option>
			<option value="tr">Turkish</option>
		</param>
		<param type="text" name="pubk" default="" label="reCAPTCHA Public Key" description="reCAPTCHA Public Key" />
		<param type="text" name="prvk" default="" label="reCAPTCHA Private Key" description="reCAPTCHA Private Key" />
		
		<param type="spacer" default="Settings" />
		<param type="text" name="URL" default="http://CitizenJosh.com" label="URL" description="URL" />
		<param type="text" name="email" default="bursar@Interpreneurial.com" label="PayPal E-mail Address" description="PayPal E-mail Address" />
		<param type="text" name="max_title" default="100" label="Max Title Length" description="Max Title Length" />
		<param type="text" name="max_desc" default="1000" label="Max Description Length" description="Max Description Length" />

	</params>
</config>